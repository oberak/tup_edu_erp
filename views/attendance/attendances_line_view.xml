<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_attendances_line_tree" model="ir.ui.view">
            <field name="name">attendances.line.tree</field>
            <field name="model">attendances.line</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Attendances Line">
                    <field name="attendances_id" />
                    <field name="student_id" />                    
                    <field name="attendance_date" />
                </tree>
            </field>
        </record>
        <record id="view_attendances_line_form" model="ir.ui.view">
            <field name="name">attendances.line.form</field>
            <field name="model">attendances.line</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Attendances Line">
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="attendances_id" widget="selection"/>
                            <field name="student_id" />
                            <field name="attendance_date" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_attendances_line_search" model="ir.ui.view">
            <field name="name">attendances.line.search</field>
            <field name="model">attendances.line</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Attendances Line">
                    <field name="attendances_id" />
                    <field name="student_id" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Attendances" name="group_attendance" domain="[]"
                            context="{'group_by':'attendances_id'}" />                        
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_attendances_line_view">
            <field name="name">Attendance Line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">attendances.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_attendances_line_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_attendances_line_view_form">
            <field name="act_window_id" ref="act_attendances_line_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_attendances_line_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_attendances_line_view_tree">
            <field name="act_window_id" ref="act_attendances_line_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_attendances_line_tree" />
        </record>
    </data>
</odoo>
